select sandwiches.location from sandwiches where sandwiches.filling = (select filling from tastes where name = 'Jones');
+----------+
| location |
+----------+
| O'Neil's |
| Buttery  |
+----------+
2 rows in set (0.00 sec)

select location from sandwiches
left join tastes on sandwiches.filling = tastes.filling where tastes.name = 'Jones';

+----------+
| location |
+----------+
| O'Neil's |
| Buttery  |
+----------+
2 rows in set (0.00 sec)

 

 select distinct s.location,count(*) as 'number of people'  from sandwiches as s,tastes as t where s.filling = t.filling group by s.location;
+----------+------------------+
| location | number of people |
+----------+------------------+
| Buttery  |                3 |
| Lincoln  |                4 |
| O'Neil's |                5 |
| Old Nag  |                3 |
+----------+------------------+
4 rows in set (0.00 sec)

